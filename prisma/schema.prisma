generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  transactions Transaction[]
  categories   Category[]
  statements   Statement[]
}


model Category {
  id        String   @id @default(uuid())
  userId    String
  name      String
  isDefault Boolean  @default(false)

  user        User @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@unique([userId, name])
}

model Statement {
  id        String   @id @default(uuid())
  userId    String
  rawText   String
  source    String?      // PhonePe, GPay, BankName, etc
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id              String   @id @default(uuid())
  userId          String
  amount          Float
  direction       TransactionDirection
  currency        String   @default("INR")
  transactionDate DateTime
  createdAt       DateTime @default(now())
  paymentMode     PaymentMode
  merchant        String?
  description     String?
  provider        TransactionProvider
  providerTxnId   String?   // PhonePe Transaction ID
  utr             String?
  categoryId      String?
  user            User      @relation(fields: [userId], references: [id])
  category        Category? @relation(fields: [categoryId], references: [id])

  @@unique([provider, providerTxnId])
}


enum TransactionDirection {
  INCOME
  EXPENSE
}

enum TransactionProvider {
  PHONEPE
  GPAY
  PAYTM
  BANK
  MANUAL
}

enum PaymentMode {
  CASH
  UPI
  CARD
  BANK
}
